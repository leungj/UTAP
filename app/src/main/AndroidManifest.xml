<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jerryleung.utap" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        <activity
            android:name="com.jerryleung.utap.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PreventionScreen"
            android:screenOrientation="portrait"
            android:label="Prevention" />
        <activity android:name=".AwareScreen"
            android:screenOrientation="portrait"
            android:label="Prevention" />
        <activity android:name=".ImmunizationScreen"
            android:screenOrientation="portrait"
            android:label="Prevention" />
        <activity android:name=".AlgorithmScreen"
            android:screenOrientation="portrait"
            android:label="Prevention" />
        <activity android:name=".ReferenceScreen"
            android:screenOrientation="portrait"
            android:label="Prevention" />
    </application>

</manifest>
