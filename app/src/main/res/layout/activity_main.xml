<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/background"
    android:orientation="vertical">

<!--
    <ImageView
        android:src="@drawable/background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal" />
-->
    <TextView
        android:text="@string/title"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="gravity"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/prevention"
        android:textColor="@android:color/background_light"
        android:layout_marginBottom="15dp"
        android:id="@+id/prevention"
        android:onClick="prevention_click"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/aware"
        android:textColor="@android:color/background_light"
        android:layout_marginBottom="15dp"
        android:id="@+id/aware"
        android:onClick="aware_click"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/immunizations"
        android:textColor="@android:color/background_light"
        android:layout_marginBottom="15dp"
        android:id="@+id/immunizations"
        android:onClick="immunization_click"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/algorithms"
        android:textColor="@android:color/background_light"
        android:layout_marginBottom="15dp"
        android:id="@+id/algorithms"
        android:onClick="algorithm_click"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/references"
        android:textColor="@android:color/background_light"
        android:layout_marginBottom="15dp"
        android:id="@+id/references"
        android:onClick="reference_click"/>

    <!--
    <ImageButton
        android:src="@drawable/menu_button"
